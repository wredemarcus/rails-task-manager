<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<div class="completion-field">
    <% if @task.completed %>
      <i class="fas fa-check-square"></i>  <span>Task is completed <span>
    <% else %>
      <i class="far fa-square"></i>  <span>Task is not completed <span>
     <% end %>
 </div>

<p><%= link_to 'Back to all Tasks', tasks_path %> </p>
<p><%= link_to 'Edit this', edit_task_path %> </p>
