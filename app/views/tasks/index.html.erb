<h1>My tasks for today 📝 </h1>
<% @tasks.each do |task| %>
  <div id="task-container">
    <% if task.completed %>
      <i class="fas fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
     <% end %>
     <span><%= link_to task.title, task_path(task) %> - <%= link_to '🚮', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %> </span>
  </div>
<% end %>
<br>

<div class="btn adding_task_button">
  <%= link_to 'Add a new task', new_task_path %>
</div>
